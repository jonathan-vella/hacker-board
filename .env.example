# HackerBoard — Environment Variables
# Copy this file to .env and fill in the values for local development.

# Azure Storage — use connection string for local Azurite development
AZURE_STORAGE_CONNECTION_STRING=UseDevelopmentStorage=true

# Azure Storage — for production (managed identity, no connection string needed)
# STORAGE_ACCOUNT_NAME=your_storage_account_name

# GitHub OAuth (configured in Azure SWA portal, not needed locally)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Application Insights — set in SWA app settings for production
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...;IngestionEndpoint=...
