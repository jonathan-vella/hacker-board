{
  "name": "HackerBoard",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    // Installs pwsh + Az modules required by deploy.ps1 and entra-app.bicep workflows.
    // Az.Accounts: auth context  |  Az.Resources: RG/deployment ops  |  Az.ManagedServiceIdentity: UAMI
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest",
      "modules": "Az.Accounts,Az.Resources,Az.ManagedServiceIdentity"
    }
  },
  "forwardPorts": [4280, 7071],
  "portsAttributes": {
    "4280": { "label": "SWA Emulator", "onAutoForward": "notify" },
    "7071": { "label": "Azure Functions", "onAutoForward": "silent" }
  },
  "remoteUser": "node",
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        // AI / Copilot
        "GitHub.copilot-chat",
        // Azure tooling
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-azuretools.vscode-azure-mcp-server",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-azurestaticwebapps",
        "ms-vscode.azurecli",
        "ms-azuretools.vscode-bicep",
        "Azurite.azurite",
        // PowerShell — IntelliSense + debugging for deploy.ps1
        "ms-vscode.powershell",
        // Python — IntelliSense and debugging for azure-diagrams skill scripts (diagrams, matplotlib, pillow)
        "ms-python.python",
        // JavaScript / Node.js
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        // Testing — Vitest native runner UI for both api/ and src/ test suites
        "vitest.explorer",
        // e2e testing — test-results/ folder confirms Playwright is in use
        "ms-playwright.playwright",
        // CI/CD + config files
        "github.vscode-github-actions",
        "redhat.vscode-yaml"
      ],
      "settings": {
        // Formatting
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [120],
        "files.eol": "\n",
        // Apply ESLint auto-fixes and organise imports on save
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        // Terminal — avoid the /bin/sh fallback that broke deploy.ps1 execution
        "terminal.integrated.defaultProfile.linux": "bash",
        // Azure tooling
        "azurite.location": "${containerWorkspaceFolder}/.azurite",
        "azureFunctions.projectLanguage": "JavaScript",
        "azureFunctions.projectRuntime": "~4",
        // PowerShell — point at the feature-installed pwsh binary
        "powershell.powerShellDefaultVersion": "PowerShell",
        // Vitest — auto-discover test files in both test roots
        "vitest.rootConfig": "${containerWorkspaceFolder}/vitest.config.js"
      }
    }
  },
  "remoteEnv": {
    "AZURE_FUNCTIONS_ENVIRONMENT": "Development",
    "AzureWebJobsStorage": "UseDevelopmentStorage=true",
    // Placeholder — override in your shell profile or .env to point at a real Cosmos DB account
    "COSMOS_ENDPOINT": ""
  }
}
